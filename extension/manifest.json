{
  "manifest_version": 3,
  "name": "RPA Browser Demo",
  "version": "0.1.0",
  "description": "MV3 tabToken demo with agent recording.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "RPA Demo"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
