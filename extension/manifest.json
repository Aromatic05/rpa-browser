{
    "manifest_version": 3,
    "name": "RPA Browser Demo",
    "version": "0.1.0",
    "description": "MV3 tabToken demo with agent recording.",
    "permissions": ["storage", "activeTab", "scripting", "tabs", "tabGroups"],
    "host_permissions": ["<all_urls>"],
    "side_panel": {
        "default_path": "panel.html"
    },
    "action": {
        "default_title": "RPA Demo"
    },
    "background": {
        "service_worker": "entry/sw.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["entry/content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["record/*.js", "shared/*.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
