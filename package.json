{
    "name": "rpa-extension-monorepo",
    "private": true,
    "packageManager": "pnpm@10.28.0",
    "scripts": {
        "dev:agent": "pnpm --filter ./agent dev",
        "build:extension": "pnpm --filter ./extension build",
        "dev": "pnpm build:extension && pnpm dev:agent",
        "mock:dev": "node mock/server.js",
        "setup": "pnpm -r install",
        "pw:install": "pnpm --filter ./agent pw:install",
        "lint": "npx eslint \"**/*.{ts,tsx,js,jsx}\" --ext .ts,.tsx,.js --max-warnings=0",
        "format": "npx prettier --write \"**/*.{ts,tsx,js,jsx,css,md,json,html}\""
    },
    "devDependencies": {
        "@types/node": "^22.19.7",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.8"
    }
}
